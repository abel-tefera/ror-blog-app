<div class="profile_container">
    <div class="border_solid img_container">
      <img src="<%= user.photo %>" alt="<%= user.name %>" width="150" height="150" />

    </div>
         <div class=" border_solid info_card" >
            <a href="/users/<%= user.id%>"> <h2 class="name_label"> <%= user.name %></h2></a>
            <p class="count_post">Number of posts: <%= user.posts_counter%> </p>
         </div>
                 <% if can? :edit, user %>

 <%= link_to 'Edit profile', edit_user_registration_path %>
      <% end %>

</div>